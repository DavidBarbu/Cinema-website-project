<div>
    <section id="galerie-statica">
        <h2>Galerie</h2>
        <div id="grid-galerie">
            <% for (let imag of locals.imagini){ %>
                <figure>
                    <picture>
                        <source srcset="/<%-imag.mic%>" media="(max-width:750px)" />
                        <img src="/<%-imag.mare%>" alt="text" />
                    </picture>
                    <figcaption>
                        <%-imag.descriere%>
                    </figcaption>
                </figure>
                <% } %>
        </div>
    </section>
</div>